<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Image -->
    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/henriksen"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_header"
        app:layout_constraintBottom_toTopOf="@id/btn_back"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Coach Biodata - DITENGAH -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/mainz_color"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tv_coach_biodata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:justificationMode="inter_word"
                    android:textStyle="italic" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Coach Story -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/mainz_color"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tv_coach_story"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:justificationMode="inter_word"
                    android:textStyle="italic" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Coach Achievements -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="@android:color/black"
                app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/tv_coach_achievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="@font/poppins_medium"
                    android:scrollbars="vertical"
                    android:focusable="true"
                    android:clickable="true" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/linear_coach_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <include android:id="@+id/layout_instagram" layout="@layout/layout_coach"/>
                <include android:id="@+id/layout_tiktok" layout="@layout/layout_coach"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:backgroundTint="@color/mainz_color"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>